<template>
  <view v-if="isGroupCall" class="group-call-message">
    <text class="group-call-text">{{ callText }}</text>
  </view>
  <view v-else :class="['call-message', 'call-msg__content--'+ (message.isSelf ? 'out' : 'in')]">
    <text class="call-text">{{ callText }}</text>
    <image :class="['call-icon--'+ (isVideo ? 'video' : 'voice'), 'call-icon--'+ (message.isSelf ? 'out' : 'in')]" :src="isVideo ? videoIcon : voiceIcon" />
  </view>
</template>

<script setup lang="ts">
import { computed } from 'vue'
import type { MessageInfo } from '../../../../types/message'
import {
  parseCallMessageData,
  isVideoCall,
  getCallMessageText
} from '../../../../utils/callMessageUtils'

import voiceIcon from '../../assets/voice-icon.png'
import videoIcon from '../../assets/video-icon.png'

interface Props {
  message: MessageInfo
  isGroupCall?: boolean
}

const props = withDefaults(defineProps<Props>(), {
  isGroupCall: false
})

const callData = computed(() => parseCallMessageData(props.message))
const isVideo = computed(() => isVideoCall(callData.value))
const callText = computed(() => getCallMessageText(props.message))
</script>

